{{!-- where user lands after login --}}
<h1>Welcome to your SIMA: Game Collection</h1>
{{!-- add a new game button --}}
<div class="add-game-container">
<button id="addGameBtn">Add New Game</button>
</div>
{{!-- submit form modal with inputs for name, minplayers,- maxplayers, type 
(gametype_id), dropdown enter premade tags  --}}
<div id="addGameModal" class="modal">
    <div class="modal-content">
        <h2>Add a New Game</h2>
        <form id="addGameForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required><br>

            {{!-- <label for="players">Number of Players:</label> --}}
            {{!-- <input type="text" id="players" name="players" placehloder="Min - Max" required><br> --}}
            <label for="minplayers">Min players:</label>
            <input type="number" id="minplayers" name="minplayers" required><br>

            <label for="maxPlayers">Maximum Players:</label>
            <input type="number" id="maxPlayers" name="maxPlayers" required><br> 
            
            <label for="type">Type:</label>
            <select id="type" name="type" required>
                {{!--  populate options from  --}}
                {{#each gametypes}}
                    <option value="{{name}}">{{name}}</option>
                {{/each }}
            </select><br>

            {{!-- <label for="tags">Game Tags:</label>
            <input type="text" id="tags" name="tags"><br> --}}

            <input type="submit" value="Add Game">

        </form>
    </div>
</div>
{{!-- js file when pressed button --}}
<script src="./assets/js/script.js"></script>
